{
  "name": "@kelios/mobile-pixel-mcp",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "description": "Visual-first MCP server for mobile automation",

  "bin": {
    "mobile-pixel": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "mobile",
    "automation",
    "adb",
    "idb",
    "android",
    "ios",
    "screenshot"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rogerfuentes/mobile-pixel-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "execa": "^9.6.1",
    "sharp": "^0.34.5",
    "tesseract.js": "^5.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^2.1.8"
  }
}
